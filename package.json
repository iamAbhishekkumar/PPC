{
  "name": "ppc",
  "displayName": "PPC(Python Project Creator)",
  "description": "A extension which creates basic files for a python project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [
    "onCommand:ppc.createPythonProject"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ppc.createPythonProject",
        "title": "Create Python Project"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "checkformat": "npx prettier --check .",
    "format": "npx prettier --write ."
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "eslint": "^8.12.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.6.3",
    "vscode-test": "^1.4.0"
  },
  "author": {
    "name": "Abhishek Kumar"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamAbhishekkumar/PPC"
  },
  "publisher": "PPC-Abhishek"
}
